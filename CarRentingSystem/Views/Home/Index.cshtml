@model IEnumerable<CarHomeModel>
@inject IAgentService agents
@{
    ViewData["Title"] = "Home Page";
    bool first = true;
}

@if (Model.Count() == 0)
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for renting cars!</h1>
        <p class="lead">
            There are no cars in the system currently available
            so why don't you just add one?
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (this.User?.Identity != null && this.User.Identity.IsAuthenticated && (await this.agents.ExistById(this.User.Id())))
            {
                <a asp-controller="Car" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
            }
        </p>
    </div>

}

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @foreach(var car in Model)
        {
            //d-flex justify-content-center   d-block w-100
            //var car = Model[i];
            <div class="carousel-item @(first ? "active" : string.Empty)">
                <img class="d-flex justify-content-center" style="width:100%; height:auto"
                 src="@car.ImageUrl" alt="@car.Title">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Car" asp-action="Details"
                       asp-route-id="@car.Id"> @car.Title</a>
                    </h5>
                </div>
            </div>
            
            @(first = false);
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="mb-5"></div>
<div class="row">
    <div class="col-12 text-center">
        <button class="btn btn-primary" id="statistics-button">Show Statistics</button>
    </div>
</div>
<div class="mt-4 p-5 bg-light d-none" id="statistics">
    <div class="row">
        <h2 class="col-md-6 text-center" id="total-cars"></h2>
        <h2 class="col-md-6 text-center" id="total-rents"></h2>
    </div>
</div>

@section Scripts {
    <script>
        $('#statistics-button').on('click', ev => {
            $.get('https://localhost:7294/api/StatisticsApi', (data) => {
                $('#total-cars').text(data.totalCars + " Cars");
                $('#total-rents').text(data.totalRents + " Rents");
                $('#statistics').removeClass('d-none');
                $('#statistics-button').hide();
            });
        });
    </script>
}

